{
    "name": "Social Media extension",
    "version": "1.0",
    "description": "This is extension which blocks sites",
    "manifest_version": 2,
      "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
      "browser_action": {
        "default_popup": "popup.html"
      },
      "permissions": ["tabs"]
  }